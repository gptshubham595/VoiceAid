<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:backgroundTint="#F9F7F2"
    android:layout_height="match_parent"
    tools:context=".trainer.AnalyzerActivity">
<ImageView
    android:layout_width="match_parent"
    android:id="@+id/graph"
    android:visibility="gone"
    android:layout_centerHorizontal="true"
    android:layout_height="200dp"/>

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/threestars"
        android:visibility="gone"
        android:background="@drawable/threestargif"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/think"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/think"
        android:layout_height="wrap_content"/>
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:src="@drawable/loadingstar"
        android:layout_below="@id/think"
        android:layout_marginTop="4dp"
        android:id="@+id/starsappear"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:textSize="22sp"
        android:fontFamily="@font/opensans"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="53dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:id="@+id/text"
        android:layout_centerHorizontal="true"
        android:text="Just a moment, weâ€™re calculating your results"
        android:layout_below="@id/starsappear"
        android:layout_height="wrap_content"/>
</RelativeLayout>