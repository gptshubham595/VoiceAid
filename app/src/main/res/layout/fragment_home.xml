<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:src="@drawable/rect" />

    <TextView
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="HOME"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/home"
        android:background="#F7F3E9">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:scaleType="fitXY"
                android:src="@drawable/pattern" />

            <ImageView
                android:id="@+id/boy"
                android:layout_width="148dp"
                android:layout_height="175dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:scaleType="fitXY"
                android:src="@drawable/me1" />

            <TextView
                android:id="@+id/wel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/boy"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="19dp"
                android:fontFamily="@font/opensans"
                android:gravity="center"
                android:text="Welcome back!"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/wel"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="34dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/buttonback"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="47dp"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/opensans"
                        android:text="BASICS"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="47dp"
                        android:fontFamily="@font/opensans"
                        android:text="You are on level 5 of 9"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/bubble"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape"
                        android:backgroundTint="#A6222121"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/star"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="8"
                            android:textColor="#ffffff"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="4dp"
                            android:background="@android:drawable/star_big_off"
                            android:backgroundTint="#ffff00" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="40dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/badge1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="18dp"
                    android:fontFamily="@font/opensans"
                    android:text="Fantastic job! Youâ€™re getting better and better by the day!"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>