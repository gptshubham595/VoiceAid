<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F3E9"
    tools:context=".trainer.TrainerActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/pattern" />
    <ImageView
        android:layout_width="148dp"
        android:layout_height="175dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:src="@drawable/hear"
        android:id="@+id/hear"
        android:visibility="gone"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/rect"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@drawable/rect" />

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/toolbar"
            android:layout_height="70dp"
            android:layout_below="@id/rect"
            android:navigationIcon="@drawable/ic_arrow_forward_black_24dp"
            app:navigationIcon="?attr/homeAsUpIndicator">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="24dp"
                    android:fontFamily="@font/opensans"
                    android:text="Basics 1/9" />
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>
    </RelativeLayout>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/saying" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/wordsonly" />

    <RelativeLayout
        android:id="@+id/rl"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="28dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle"
            android:backgroundTint="#5C6071"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
            android:src="@drawable/replay" />

        <Button
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape2"
            android:text="LET'S TRY"
            android:layout_margin="5dp"
            android:fontFamily="@font/opensans"
            android:textStyle="bold"
            android:backgroundTint="#D5262633"
            android:textColor="#ffffff" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/speaker"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:background="@drawable/speaker"
        android:textColor="#ffffff"
        android:visibility="gone"
         />
 <TextView
     android:layout_width="wrap_content"
     android:text="-TAP TO START RECORDING-"
     android:textSize="18sp"
     android:id="@+id/tap"
     android:layout_marginTop="-40dp"
     android:layout_below="@id/speaker"
     android:visibility="gone"
     android:layout_centerHorizontal="true"
     android:layout_height="wrap_content"/>
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/speakergif"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:visibility="gone"
        android:src="@drawable/speakervoice"
         />
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_below="@id/hear"
        android:id="@+id/wordsonlyshow"
        android:elevation="18dp"
        android:src="@drawable/wordsonly"
        android:layout_marginTop="320dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"/>
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_below="@id/hear"
        android:id="@+id/wordsonly"
        android:elevation="18dp"
        android:src="@drawable/wordsonly"
        android:layout_marginTop="320dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"/>
    <SeekBar
        android:id="@+id/seekbar"
        android:layout_marginLeft="51dp"
        android:layout_marginRight="51dp"
        android:layout_marginTop="470dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:layout_gravity="center" />
    <Button
        android:id="@+id/go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="38dp"
        android:clickable="true"
        android:text="CONTINUE"
        android:textStyle="bold"
        android:visibility="gone"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:fontFamily="@font/opensans"
        android:background="@drawable/shape2"
        android:backgroundTint="#5C6071"
        android:scaleType="fitXY"
         />
    <ImageView
        android:id="@+id/again2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle"
        android:backgroundTint="#E48344"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_margin="40dp"
        android:visibility="gone"
        android:src="@drawable/replay" />
</RelativeLayout>